{
    "info": {
        "name": "Skill-Gated Task & Internship Backend",
        "description": "Postman collection for Skill-Gated Internship Backend (Students, Organizations, Admin)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Student Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/auth/student/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "student",
                                "register"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"student@test.com\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Organization Register",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/auth/org/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "org",
                                "register"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Tech Corp\",\n  \"email\": \"org@test.com\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"student@test.com\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Me",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "logout"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Student",
            "item": [
                {
                    "name": "Create Student Profile",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/student/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "student",
                                "profile"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"university\": \"ABC University\",\n  \"degree\": \"B.Tech CSE\",\n  \"yearOfStudy\": 3\n}"
                        }
                    }
                },
                {
                    "name": "Request Skill Verification",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/student/skills",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "student",
                                "skills"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"skillId\": \"<MASTER_SKILL_ID>\",\n  \"proof\": \"GitHub repo / certificate link\"\n}"
                        }
                    }
                },
                {
                    "name": "Apply For Task",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/student/tasks/<TASK_ID>/apply",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "student",
                                "tasks",
                                "<TASK_ID>",
                                "apply"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Applied Tasks",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/student/tasks/applied",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "student",
                                "tasks",
                                "applied"
                            ]
                        }
                    }
                },
                {
                    "name": "Submit Task",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/student/tasks/<TASK_ID>/submit",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "student",
                                "tasks",
                                "<TASK_ID>",
                                "submit"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"submissionLink\": \"https://github.com/user/project\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Organization",
            "item": [
                {
                    "name": "Create Organization Profile",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/org/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "org",
                                "profile"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"description\": \"We are a tech company offering internships\"\n}"
                        }
                    }
                },
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/org/tasks",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "org",
                                "tasks"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Backend API Task\",\n  \"description\": \"Build REST APIs\",\n  \"requiredSkills\": [],\n  \"payout\": 2000,\n  \"durationInDays\": 7\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Get Pending Skills",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/admin/skills",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "skills"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Skill",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/admin/skills/<SKILL_ID>/approve",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "skills",
                                "<SKILL_ID>",
                                "approve"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Task",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/admin/tasks/<TASK_ID>/approve",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin",
                                "tasks",
                                "<TASK_ID>",
                                "approve"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}